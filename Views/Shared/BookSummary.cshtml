@model Book


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @Model.Title
            @*I change the badge color to green as another extra bootstrap element for this assignment*@
            <span class="badge badge-pill badge-success" style="float:right">
                <small>@Model.Price.ToString("c")</small>
            </span>
        </h4>
    </div>

    @* displaying the books *@
    <div class="card-text p-1">Author First Name: @Model.Author_First</div>
    <div class="card-text p-1">Author Last Name: @Model.Author_Last</div>
    <div class="card-text p-1">Publisher: @Model.Publisher</div>
    <div class="card-text p-1">ISBN: @Model.ISBN</div>
    <div class="card-text p-1">Classification: @Model.Classification</div>
    <div class="card-text p-1">Category: @Model.Category</div>
    <div class="card-text p-1">Page: @Model.Page</div>


    @* linking the add to cart button to our form *@
    <form id="@Model.BookId" asp-page="/Donate" method="post">
        <input type="hidden" asp-for="BookId"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-1">
            @Model.Title
            <button type="submit" class="btn-success btn-sm pull-right" style="float:right">
                Add To Cart
            </button>
        </span>
    </form>

</div>