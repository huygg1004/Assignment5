@{
    ViewData["Title"] = "Bookstore";
}

@model IQueryable<Book>
<header>
    <h1>This is an Online Book Store</h1>
</header>

@*Looping through each column in the database and output data + Bootstrap on the Index page*@

@foreach (var x in Model)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @x.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@x.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Author: @x.Author</div>
    <div class="card-text p-1">Publisher: @x.Publisher</div>
    <div class="card-text p-1">ISBN: @x.ISBN</div>
    <div class="card-text p-1">Classification: @x.Classification</div>
    <div class="card-text p-1">Classification: @x.Category</div>
</div>
}